<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/card.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (dataInfo.length > 0) { %>
            <div class="grid">
                <% for (let data of dataInfo) { %>
                    <a href="/<%= data.RegionName %>/vpcs" class="card-link">
                        <article class="card card-item">
                            <header class="card__header">
                            <h1 class="card__title"><%= data.RegionName %></h1>
                            </header>
                            
                            <div class="card__content">
                                <h5 class="card_content">$<%= data.Endpoint %></h5>
                                <p class="card__description">(<%= data.OptInStatus %>)</p>
                            </div> 
                        </article>
                    </a>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Records Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>